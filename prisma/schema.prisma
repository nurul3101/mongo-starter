generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("MONGODB_URI")
}

model Chat {
  db_id       String    @id @default(auto()) @map("_id") @db.ObjectId
  id          String    @unique
  title       String
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  path        String
  messages    Message[]
  model       String
  temperature Float
  sharePath   String?
}

enum Role {
  system
  user
  assistant
  function
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  Chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String
  content   String
  role      Role
  createdAt DateTime @default(now())
}

model Sample {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  createdAt DateTime @default(now())
}
